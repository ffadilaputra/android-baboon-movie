<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ffadilaputra.org.baboonmovie"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <application
        tools:replace="icon"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.orm.SugarApp"
        >

        <meta-data android:name="DATABASE" android:value="mooviedb.db"/>
        <meta-data android:name="VERSION" android:value="2"/>
        <meta-data android:name="QUERY_LOG" android:value="true"/>
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="ffadilaputra.org.baboonmovie"/>

        <activity
            android:name=".MovieActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MovieAdd"></activity>
        <activity android:name=".MovieDetail"></activity>
        <activity android:name=".EditMovies"></activity>
        <activity android:name=".GenreActivity"></activity>
        <activity android:name=".AddGenre"></activity>
        <activity android:name=".ActorActivity"></activity>
        <activity android:name=".AddActor"></activity>

    </application>

</manifest>